mixin menuItems(items)
  ul.menu-list
    each item in items
      li.menu-item
        a.menu-link(class=(item.current ? "current" : "") href=item.href)
          .menu-wrap
            svg.menu-icon(width="24" height="24")
              use(href=`/img/sprite.svg#${item.icon}`)
            | #{item.label}
          svg.menu-icon(width="16" height="16")
            use(href="/img/sprite.svg#icon-chevron-right")


.sidebar-container
  aside.sidebar.js-menu#sidebar-menu
    nav.menu
      button(class="close-menu-btn js-menu-close" type="button" aria-label="Close menu" aria-expanded="false")
        svg.close-btn-icon(width="24" height="24")
          use(href="img/sprite.svg#icon-close")

      a.logo(href="./index.html")
        svg.logo-icon(width="37" height="37")
          use(href="/img/sprite.svg#icon-logo")
        div Dashboard<span class="version">v.01</span>

    
      +menuItems([
        { label: "Dashboard", href: "./index.html", icon: "icon-key-square" },
        { label: "Product", href: "./index.html", icon: "icon-d-square"},
        { label: "Customers", href: "./customers.html", icon: "icon-user-square", current: true },
        { label: "Income", href: "./index.html", icon: "icon-wallet-money" },
        { label: "Promote", href: "./index.html", icon: "icon-discount-shape" },
        { label: "Help", href: "./index.html", icon: "icon-message-question" }
      ])

    .user-wrap
      img(srcset="/img/user@1x.png, /img/user@2x.png" src="/img/user@1x.png" alt="user photo" class="user-photo-img" width="42" height="42")
      div
        p.user-name Evano
        p.user-position Project Manager

